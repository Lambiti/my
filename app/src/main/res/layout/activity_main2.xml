<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进制转换"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/Linear_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/result_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@android:drawable/editbox_background"
                android:cursorVisible="false"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:layout_gravity="bottom"/>

            <Spinner
                android:id="@+id/Spinner_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_2"
                android:layout_gravity="bottom" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linear_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_二进制转换"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二进制转换"/>
            <Button
                android:id="@+id/bt_八进制转换"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八进制转换"/>
            <Button
                android:id="@+id/bt_十进制转换"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十进制转换"/>
            <Button
                android:id="@+id/bt_十六进制转换"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十六进制转换"/>

        </LinearLayout>
        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长度换算"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/Linear_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/result_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@android:drawable/editbox_background"
                android:cursorVisible="false"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textSize="20dp"
                android:layout_gravity="bottom"/>

            <Spinner
                android:id="@+id/Spinner_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_2"
                android:layout_gravity="bottom" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linear_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千米"/>
            <Button
                android:id="@+id/bt_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"/>
            <Button
                android:id="@+id/bt_dm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分米"/>
            <Button
                android:id="@+id/bt_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厘米"/>
            <Button
                android:id="@+id/bt_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="毫米"/>

        </LinearLayout>
        <TextView
            android:id="@+id/text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"/>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>